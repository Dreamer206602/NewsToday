<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.booboomx.todaynews.ui.activity.WelcomeActivity">



    <ImageView
        android:scaleType="fitXY"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/img_toutiao"
        android:id="@+id/img_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerInside"
        android:src="@drawable/splash_banner"
        android:id="@+id/img_toutiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <com.booboomx.todaynews.widget.CountDownView
        android:id="@+id/countDownView"
        android:layout_margin="20dp"
        app:border_width="2dp"
        app:text_size="12dp"
        app:text_color="@color/black"
        app:border_color="@color/colorRedPrimaryDark"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:background_color="#22000000"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

</RelativeLayout>
