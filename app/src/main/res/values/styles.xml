<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--启动页白屏处理-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NewsDetailTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground" >@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:colorBackgroundCacheHint">@null</item>

    </style>

    <style name="PictureDownLoadTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground" >@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>





    <style name="tab_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:textColor">@color/tab_selector</item>
    </style>




    <style name="new_info_layout_text_style">
        <item name="android:textSize">13.0dip</item>
        <item name="android:textColor">@color/ssxinzi2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0.0dip</item>
    </style>


    <style name="new_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="title_bar_style">
        <item name="android:background">@drawable/bg_titlebar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
    </style>

    <style name="topic_title_back_image">
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:src">@drawable/leftbackicon_titlebar</item>
    </style>
</resources>
